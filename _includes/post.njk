---
layout: base.njk
---

<article class="mb-5">
  <h1>{{ title }}</h1>
  <p class="text-muted">{{ date | readableDate }}</p>
  
  {% if featured %}
    <img src="{{ featured }}" alt="Featured image for {{ title }}" class="img-fluid mb-3 rounded">
  {% endif %}

  <div class="content">
    {{ content | safe }}
  </div>
</article>
